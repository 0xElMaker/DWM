backend = "xrender";

vsync = true;
unredir-if-possible = true;

# Global transparency settings for all windows
inactive-opacity = 0.85;
active-opacity = 0.9;
frame-opacity = 0.7;
inactive-opacity-override = false;

# Fading effects
fading = true;
fade-in-step = 0.04;
fade-out-step = 0.04;

# Shadows for all windows
shadow = true;
shadow-radius = 10;
shadow-offset-x = -5;
shadow-offset-y = -5;
shadow-opacity = 0.3;

# No blur in xrender
blur-method = "none";

# Exclude Firefox from transparency

use-damage = true;

